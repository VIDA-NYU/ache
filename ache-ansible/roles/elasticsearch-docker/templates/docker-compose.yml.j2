version: '2'
services:
  elasticsearch:
    image: {{ elasticsearch_image }}
    environment:
{% for envvar in elasticsearch_env_vars %}
      - {{ envvar }}
{% endfor %}
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - {{ elasticsearch_volume }}
    ports:
      - 9200:9200
      - 9300:9300
