    (function(w, pathname) {
        var sl1, sl2, sl3;
        pathname = w.location.pathname.split('/');
        if (w.location.pathname[0] === '/') {
            pathname.shift();
        }
        if (pathname.length > 1) {
            sl1 = pathname.shift(); //channel
            sl1 = (sl1 === 'channel' || sl1 === '') ? 'NGC' : sl1;
            sl2 = pathname[0].toLowerCase()
            if ( sl2 === 'series' || sl2 === 'episodes') { pathname.shift(); } //Get rid of it.
            sl2 = 'Show' // cus "show" always needs to be there.
            sl3 = pathname.shift(); //Series or Stand-alone episode
            w.s_hier1 = [sl1, sl2, sl3, pathname.join('/')].join('|');
        } else {
            w.s_hier1 = ['NGC', pathname].join('|');
        }
        w.STATIC_URL = '//media-channel.nationalgeographic.com/static-media/';
        w.ngs_reportsuite = w.location.pathname.split('/')[1] === 'wild' ? 'natnatgeongcwild' : 'natgeongccom';
    })(window, location.pathname, undefined);
