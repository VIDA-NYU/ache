<script type="text/javascript">

/**
 * Scroll Depth Tracking
 */
$(document).on("ready", function(){
    var enabled = false;
    if (enabled) {
        s.prop43 = 0; // Percentage of article
        s.prop44 = 0; // Absolute px
        var $el = $("article#article, main.article-body, body").eq(0);

        setInterval(function(){
            var bottom = $el.offset().top + $el.outerHeight();
            var pos = window.pageYOffset || document.documentElement.scrollTop;
            var segmentedPos = Math.floor(pos/250) * 250; // Rounded down to the nearest 250px
            var percent = (segmentedPos/bottom).toFixed(2);
            if (segmentedPos > s.prop44) {  // Reached next milestone
                s.prop43 = (percent > s.prop43) ? percent : s.prop43;
                s.prop44 = (pos > s.prop44) ? pos : s.prop44;
                s.events = "scroll";
                s.tl(true, 'o',  'depth`'+ window.location.pathname);
            }
        }, 100);
    }
});
</script>
