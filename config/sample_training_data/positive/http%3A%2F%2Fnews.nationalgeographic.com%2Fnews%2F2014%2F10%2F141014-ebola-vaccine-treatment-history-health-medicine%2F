	return true;

}



function doPhotoFixup() {
	
	var allPhotoClasses=document.getElementsByClassName("primary_photo");
	
	for (var b=0; b < allPhotoClasses.length; b++) {
	
	
	try {
		var thePhoto=allPhotoClasses[b].getElementsByTagName("img")[0];
			thePhoto.src=thePhoto.src.replace(/600x450/,"990x742").replace(/420x315/,"990x742").replace(/overrides/,"cache");
		
		
		var oldwidth=thePhoto.width;
		var oldheight=thePhoto.height; 
		
		if (! mainPhotoWidth) {
			var mainPhotoWidth=650;
		}
		
		var desiredMargin=( ( 650-mainPhotoWidth ) /2 - 20 );
		if (thePhoto.parentNode.parentNode.className=="article_body" || b > 0) {
			desiredMargin -= 50; // fix for vertical templates and old secondary embeds. 
		
		}
		
		
		
		thePhoto.width=thePhoto.style.width=mainPhotoWidth;
		thePhoto.height=thePhoto.style.height=(mainPhotoWidth/oldwidth)*oldheight;
		thePhoto.parentNode.style.marginLeft=desiredMargin + "px";
		
		if (b>0) {
			thePhoto.parentNode.className=thePhoto.parentNode.className.replace(/primary_photo/,"fullwidthphoto");
		}
		
		
	
		var theCaptions=thePhoto.parentNode.getElementsByClassName('caption') ;
		for (var i=0; i<theCaptions.length; i++) {
			if(mainPhotoWidth > 610) {
				theCaptions[i].style.marginLeft="20px";
			}
				
			theCaptions[i].style.width=mainPhotoWidth-40 + "px";		
		}
			
		var theCredits=thePhoto.parentNode.getElementsByClassName('credit') ;
		for (var i=0; i<theCredits.length; i++) {
			if(mainPhotoWidth > 610) { 
				theCredits[i].style.marginLeft="20px";		
			}
			
			theCredits[i].style.width=mainPhotoWidth-40 + "px";			
		}
	} catch(err){}


}

	
	 
}

doPhotoFixup();
